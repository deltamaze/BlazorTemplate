@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

<div>DebugWindow: @debugOutput</div>

@functions {
	int currentCount = 0;
	string debugOutput = "";

	void IncrementCount()
	{
		currentCount++;
		debugOutput = "CurrentCount set to:" + currentCount.ToString();


	}
}
